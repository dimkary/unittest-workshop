import unittest
from shapes.triangle import Triangle


class TestTriangle(unittest.TestCase):

    right_Triangle = Triangle(1, 2, 60) 
    equilateral_Triangle = Triangle(1, 1, 60)

    def test_area_triangle(self):
        self.assertAlmostEqual(
            self.right_Triangle.area(), 0.8660, places=3
        )

    def test_perimeter_triangle(self):
        self.assertAlmostEqual(
            self.right_Triangle.perimeter(), 4.73205, places=3
        )

    def test_right(self):
        self.assertTrue(
            self.right_Triangle.isRight()
        )

    def test_equilateral(self):
        self.assertTrue(
            self.equilateral_Triangle.isEquilateral()
        )

    def test_create_triangle_negative_length(self):
        with self.assertRaises(ValueError):
            Triangle(-1, 1, 40)

    def test_create_triangle_negative_angle(self):
        with self.assertRaises(ValueError):
            Triangle(1, 1, -40)
